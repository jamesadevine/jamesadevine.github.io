---
interface Props {
    publications: Record<string, any[]>;
}
const { publications } = Astro.props as Props;
---

<section class="publications">
    <div class="publications-grid">
        {
            Object.entries(publications)
                .reverse()
                .map(([year, papers]) => (
                    <section>
                        <h2 class="publication-year">{year}</h2>
                        <div class="publication-list">
                            {papers.map((pub) => (
                                <article class="publication-card">
                                    <div class="publication-content">
                                        <h3 class="publication-title">
                                            {pub.title}
                                        </h3>

                                        {pub.authors && (
                                            <p class="publication-authors">
                                                {pub.authors.join(", ")}
                                            </p>
                                        )}

                                        <div class="publication-meta">
                                            {pub.venue && (
                                                <span class="venue">
                                                    {pub.venue}
                                                </span>
                                            )}
                                        </div>

                                        {pub.abstract && (
                                            <details class="publication-abstract">
                                                <summary>Abstract</summary>
                                                <p>{pub.abstract}</p>
                                            </details>
                                        )}
                                    </div>
                                </article>
                            ))}
                        </div>
                    </section>
                ))
        }
    </div>
</section>

<style>
    .publications {
        width: 100%;
        margin: 2rem 0;
    }

    .publications-grid {
        display: grid;
        gap: 1.5rem;
        grid-template-columns: 1fr;
    }

    .publication-card {
        margin-top: 1em;
        background: white;
        border: 1px solid rgb(var(--gray-light));
        border-radius: 8px;
        padding: 1.5rem;
        box-shadow: 0 2px 4px rgba(var(--gray), 10%);
        transition: box-shadow 0.2s ease;
    }

    .publication-card:hover {
        box-shadow: var(--box-shadow);
    }

    .publication-title {
        margin: 0 0 0.75rem 0;
        font-size: 1.25rem;
        line-height: 1.3;
    }

    .publication-title a {
        color: rgb(var(--black));
        text-decoration: none;
    }

    .publication-title a:hover {
        color: var(--accent);
        text-decoration: underline;
    }

    .publication-authors {
        margin: 0 0 0.5rem 0;
        color: rgb(var(--gray-dark));
        font-style: italic;
    }

    .publication-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 1rem;
        font-size: 0.9rem;
        color: rgb(var(--gray));
    }

    .publication-meta span {
        background: rgb(var(--gray-light));
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
    }

    .publication-abstract {
        margin-top: 1rem;
    }

    .publication-abstract summary {
        cursor: pointer;
        color: var(--accent);
        font-weight: 500;
    }

    .publication-abstract p {
        margin-top: 0.5rem;
        font-size: 0.95rem;
        line-height: 1.5;
        color: rgb(var(--gray-dark));
    }

    @media (max-width: 720px) {
        .publication-meta {
            flex-direction: column;
            gap: 0.5rem;
        }
    }
</style>
