---
import HamburgerMenu from "./HamburgerMenu.astro";
import StandardMenu from "./StandardMenu.astro";
import { getCollection } from "astro:content";

const allPosts = await getCollection("blog");

const items = [
	{ href: "/", title: "Home" },
	...(allPosts && allPosts.length > 0
		? [{ href: "/posts", title: "Posts" }]
		: []),
	{ href: "/pdf/james-devine-cv-18-07-2025.pdf", title: "CV" },
	{ href: "/publications", title: "Publications" },
	{ href: "/patents", title: "Patents" },
];
---

<HamburgerMenu items={items} />
<StandardMenu items={items} />
